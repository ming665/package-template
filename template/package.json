{
  "name": "@xhs/{{ name }}",
  "version": "1.0.0",
  "description": "{{ description }}",
  "main": "dist/{{ name }}.js",
  "browser": "dist/{{ name }}.browser.js",
  "scripts": {
    "build": "rimraf dist && yarn build:node && yarn build:browser",
    "build:node": "cross-env NODE_ENV=node && bili src/{{ name }}.js --file-name {{ name }}.js --format cjs --bundle-node-modules --minify --no-map",
    "build:browser": "cross-env NODE_ENV=browser && bili src/{{ name }}.js --file-name {{ name }}.browser.js --format umd --module-name logger --bundle-node-modules --minify --no-map",
    {{#jest}}"browser": "serve",
    "test": "yarn build && jest test",{{/jest}}
    "prepublish": "yarn build"{{#git}},
    "release": "standard-version && yarn build && npm publish"{{/git}}
  },
  "files": [
    "src",
    "dist"
  ],
  {{#git}}"repository": {
    "type": "git",
    "url": "{{ gitRepository }}"
  },{{/git}}
  {{#git}}"bugs": {
    "url": "https://github.com/ming665/logger/issues"
  },
  "author": "{{ author }}",
  "license": "{{ license }}",
  "devDependencies": {
    {{#jest}}"@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^26.0.1",{{/jest}}
    "bili": "^5.0.5",
    "cross-env": "^7.0.3",
    {{#jest}}"jest": "^26.6.3",{{#jest}}
    "rimraf": "^3.0.2"{{#jest}},
    "serve": "^11.3.2",
    "standard-version": "^9.2.0"{{#jest}}
  },
  "publishConfig": {
    "registry": "http://localhost:4873"
  }
}
